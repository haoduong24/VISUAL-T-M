@model IEnumerable<DVH.QLBVot.Models.DonHang>

@{
    ViewBag.Title = "Danh Sách Đơn Hàng";
    Layout = "_Layout";
}

<h2>Danh Sách Đơn Hàng</h2>

<table class="table">
    <thead>
        <tr>
            <th>Mã Đơn Hàng</th>
            <th>Mã Khách Hàng</th>
            <th>Ngày Đặt Hàng</th>
            <th>Tổng Tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var donHang in Model)
        {
            <tr>
                <td>@donHang.MaDonHang</td> <!-- Mã Đơn Hàng -->
                <td>@donHang.MaKhachHang</td> <!-- Mã Khách Hàng -->
                <td>@donHang.NgayDatHang.ToString("dd/MM/yyyy")</td> <!-- Ngày Đặt Hàng -->
                <td>@donHang.TongTien.ToString("C", System.Globalization.CultureInfo.CurrentCulture)</td> <!-- Tổng Tiền -->
            </tr>
        }
    </tbody>
</table>

<div class="mb-3">
    @Html.ActionLink("Đặt hàng mới", "Create", "DonHang", null, new { @class = "btn btn-primary" })
</div>
